@model IEnumerable<PresentationL.Models.CityViewModel>

<h2>Список Городов</h2>
<p>
    @Html.ActionLink("Добавить город", "CityCreate") 
</p>
<table>
    <tr>
        <th>Id</th>
        <th>Город</th>
        <th>ID Города</th>       
    </tr>

    @foreach (var item in Model)
    {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.Id)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Name)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.IdCity)
    </td>
    <td>
        @Html.ActionLink("Редактировать", "CityEditor", new { cityId = item.Id }) |
        @Html.ActionLink("Удалить", "CityDelete", new { cityId = item.Id })
    </td>
</tr>
    }
</table>